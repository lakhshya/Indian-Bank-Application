<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.indianbankapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_ib"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.indianbankapp.app.OptionListActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.indianbankapp.app.OptionDetailActivity"
            android:label="@string/title_option_detail"
            android:screenOrientation="portrait"

            android:parentActivityName="com.example.indianbankapp.app.OptionListActivity" >
            <meta-url
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.indianbankapp.app.OptionListActivity" />
        </activity>
    </application>

</manifest>
